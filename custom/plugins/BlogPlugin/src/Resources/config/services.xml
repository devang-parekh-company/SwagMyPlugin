<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="BlogPlugin\Core\Content\BlogPlugin\Blog\BlogDefinition">
            <tag name="shopware.entity.definition" entity="blog"></tag>
        </service>

        <service id="BlogPlugin\Core\Content\BlogPlugin\Blog\Aggregate\BlogTranslationDefinition">
            <tag name="shopware.entity.definition" entity="blog_translation"></tag>
        </service>

        <service id="BlogPlugin\Core\Content\BlogPlugin\BlogMapping\BlogCategoryMappingDefinition">
            <tag name="shopware.entity.definition" entity="blog_blog_category"></tag>
        </service>

        <service id="BlogPlugin\Core\Content\BlogPlugin\BlogCategory\BlogCategoryDefinition">
            <tag name="shopware.entity.definition" entity="blog_category"></tag>
        </service>

        <service id="BlogPlugin\Core\Content\BlogPlugin\BlogCategory\Aggregate\BlogCategoryTranslationDefinition">
            <tag name="shopware.entity.definition" entity="blog_category_translation"></tag>
        </service>

    <service id="BlogPlugin\Core\Content\BlogPlugin\ProductMapping\BlogProductMappingDefinition">
            <tag name="shopware.entity.definition" entity="blog_mapping_product"></tag>
        </service>

        <service id="BlogPlugin\Core\Content\Extension\ProductExtension">
            <tag name="shopware.entity.extension"></tag>
        </service>

        <service id="BlogPlugin\Core\Content\Extension\LanguageExtension">
            <tag name="shopware.entity.extension"></tag>
        </service>
    </services>
</container>