{% block sw_blog_create %}
	<sw-page class="sw-blog-create">
		<template #smart-bar-actions>
			<sw-button :routerLink="{name: 'sw.blog.index'}">
				{{$tc('sw-blog.general.cancel')}}
			</sw-button>
			<sw-button-process :isloading="isLoading" :processsuccess="processSuccess" variant="primary" @process-finish="saveFinish" @click="onClickSave">
				{{$tc('sw-blog.general.save')}}
			</sw-button-process>
		</template>
		<template #content>
			<sw-card-view>
				<sw-card v-if="blog">
					<sw-text-field v-model:value="blog.name" :placeholder="$tc('sw-blog.detail.placeholderName')" :label="$tc('sw-blog.detail.labelName')" name="name" validation="required" required/>

					<sw-textarea-field v-model:value="blog.description" :placeholder="$tc('sw-blog.detail.placeholderDescription')" :label="$tc('sw-blog.detail.labelDescription')" name="name" validation="required" required></sw-textarea-field>

					<sw-text-field
					v-model:value="blog.author" :placeholder="$tc('sw-blog.detail.placeholderAuthor')" :label="$tc('sw-blog.detail.labelAuthor')" name="author" validation="required" required/>

					<sw-datepicker v-model:value="blog.releaseDate" :label="$tc('sw-blog.detail.labelReleaseDate')" name="release_date" required></sw-datepicker>

					<sw-switch-field :label="$tc('sw-blog.detail.labelActive')" v-model:value="blog.active" name="active"/>

					<sw-entity-multi-select
						:label="$tc('sw-blog.detail.labelBlogCategory')" 
						:placeholder="$tc('sw-blog.detail.placeholderBlogCategory')"
						entity-name="blog_category"
						v-model:entityCollection="blog.blogCategories"
						>
					</sw-entity-multi-select>

					<sw-entity-multi-select
						:label="$tc('sw-blog.detail.labelProduct')"
						:placeholder="$tc('sw-blog.detail.placeholderProduct')"
						entity-name="product"
						v-model:entityCollection="blog.products"
						>
					</sw-entity-multi-select>

				</sw-card>
			</sw-card-view>
		</template>
	</sw-page>
{% endblock %}
