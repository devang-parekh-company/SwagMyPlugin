{
    "name": "blog-plugin/blog-plugin",
    "description": "A Shopware 6 plugin that provides blog and blog-category functionality",
    "type": "shopware-platform-plugin",
    "version": "1.0.0",
    "license": "MIT",
    "require": {
        "shopware/core": "~6.6.0"
    },
    "extra": {
        "shopware-plugin-class": "BlogPlugin\\BlogPlugin",
        "label": {
            "de-DE": "Blog Plugin",
            "en-GB": "Blog Plugin"
        },
        "description": {
            "de-DE": "Ein Plugin für zusätzliche Funktionalität",
            "en-GB": "A plugin for additional functionality"
        },
        "manufacturerLink": {
            "de-DE": "https://www.icreativetechnologies.com",
            "en-GB": "https://www.icreativetechnologies.com"
        },
        "supportLink": {
            "de-DE": "https://www.support.icreativetechnologies.com",
            "en-GB": "https://www.support.icreativetechnologies.com"
        }
    },
    "autoload": {
        "psr-4": {
            "BlogPlugin\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "BlogPlugin\\Tests\\": "tests/"
        }
    }
}
